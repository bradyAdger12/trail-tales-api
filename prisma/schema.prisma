generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
}

model User {
  id                            String    @id @default(uuid())
  email                         String    @unique
  display_name                  String?   @unique
  hashed_password               String
  avatar_file_key               String?
  strava_access_token           String?
  strava_refresh_token          String?
  strava_owner_id               Int?
  threshold_pace_seconds        Int?
  weekly_distance_in_kilometers Int?
  health                        Int       @default(50)
  hunger                        Int       @default(50)
  thirst                        Int       @default(50)
  created_at                    DateTime  @default(now())
  updated_at                    DateTime  @default(now())
  Story                         Story[]
  Chapter                       Chapter[]
  Action                        Action[]

  @@map("users")
}

model CharacterTemplate {
  id          String   @id @default(uuid())
  name        String
  description String
  health      Int
  hunger      Int
  thirst      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@map("character_templates")
}

model StoryTemplate {
  id              String     @id @default(uuid())
  title           String
  description     String
  cover_image_url String
  difficulty      Difficulty @default(easy)
  created_at      DateTime   @default(now())
  updated_at      DateTime   @default(now())
  Story           Story[]

  @@map("story_templates")
}

model Story {
  id              String        @id @default(uuid())
  template_id     String
  user_id         String
  title           String
  description     String
  cover_image_url String
  difficulty      Difficulty    @default(easy)
  created_at      DateTime      @default(now())
  updated_at      DateTime      @default(now())
  storyTemplate   StoryTemplate @relation(fields: [template_id], references: [id])
  user            User          @relation(fields: [user_id], references: [id])
  chapters        Chapter[]

  @@map("stories")
}

model Chapter {
  id          String   @id @default(uuid())
  story_id    String
  user_id     String
  title       String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
  story       Story    @relation(fields: [story_id], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  actions     Action[]

  @@map("chapters")
}

model Action {
  id                 String     @id @default(uuid())
  chapter_id         String
  user_id            String
  description        String
  distance_in_meters Int
  health             Int
  food               Int
  water              Int
  difficulty         Difficulty
  created_at         DateTime   @default(now())
  updated_at         DateTime   @default(now())
  chapter            Chapter    @relation(fields: [chapter_id], references: [id], onDelete: Cascade)
  user               User       @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("actions")
}

model PasswordResetToken {
  id          String   @default(uuid())
  user_id     String
  token       String
  expiry_time DateTime @default(now())
  created_at  DateTime @default(now())

  @@id([user_id, token])
  @@map("password_reset_tokens")
}
