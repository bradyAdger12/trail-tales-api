generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
}

model User {
  id                   String    @id @default(uuid())
  email                String    @unique
  display_name         String?   @unique
  hashed_password      String
  avatar_file_key      String?
  strava_access_token  String?
  strava_refresh_token String?
  strava_owner_id      Int?
  created_at           DateTime  @default(now())
  updated_at           DateTime  @default(now())
  Story                Story[]
  Chapter              Chapter[]

  @@map("users")
}

model Character {
  id          String   @id @default(uuid())
  name        String
  description String
  health      Int
  hunger      Int
  thirst      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@map("characters")
}

model StoryTemplate {
  id              String     @id @default(uuid())
  title           String
  description     String
  cover_image_url String
  difficulty      Difficulty @default(easy)
  created_at      DateTime   @default(now())
  updated_at      DateTime   @default(now())
  Story           Story[]

  @@map("story_templates")
}

model Story {
  id              String        @id @default(uuid())
  template_id     String
  user_id         String
  title           String
  description     String
  cover_image_url String
  difficulty      Difficulty    @default(easy)
  created_at      DateTime      @default(now())
  updated_at      DateTime      @default(now())
  storyTemplate   StoryTemplate @relation(fields: [template_id], references: [id])
  user            User          @relation(fields: [user_id], references: [id])
  Chapter         Chapter[]

  @@map("stories")
}

model Chapter {
  id          String   @id @default(uuid())
  story_id    String
  user_id     String
  title       String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
  story       Story    @relation(fields: [story_id], references: [id])
  user        User     @relation(fields: [user_id], references: [id])

  @@map("chapters")
}

model PasswordResetToken {
  id          String   @default(uuid())
  user_id     String
  token       String
  expiry_time DateTime @default(now())
  created_at  DateTime @default(now())

  @@id([user_id, token])
  @@map("password_reset_tokens")
}
